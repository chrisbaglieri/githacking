= form_for(@repository) do |f|
  - if @repository.errors.any?
    #error_explanation
      %h2
        = pluralize(@repository.errors.count, "error")
        prohibited this repository from being saved:
      %ul
        - @repository.errors.full_messages.each do |msg|
          %li
            = msg
  .field
    = f.label :name
    = f.text_field :name, :class => "text"
  %br
  .field
    = f.label :user
    = f.text_field :user, :class => "text"
  %br
  .field
    = f.label :tag_list
    = f.text_field :tag_list, :class => "text"
  %br
  .actions
    = f.submit

