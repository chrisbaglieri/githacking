:erb
  <h1>Repositories</h1>
  
  <table>
    <tr>
      <th>Project name</th>
      <th>Categories</th>
      <th></th>
      <th></th>
      <th></th>
    </tr>
  
  <% @repositories.each do |repository| %>
    <tr>
      <td><%= repository.project_name %></td>
      <td>
        <% unless repository.categories.blank? %>
            <%= repository.categories.to_sentence %>
        <% end %>
      </td>
      <td><%= link_to image_tag("find.png"), repository %></td>
      <td><%= link_to image_tag("edit.png"), edit_repository_path(repository) %></td>
      <td><%= link_to image_tag("delete.png"), repository, :confirm => 'Are you sure?', :method => :delete %></td>
    </tr>
  <% end %>
  </table>
