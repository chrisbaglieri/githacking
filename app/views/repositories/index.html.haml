:erb
  <h1>Listing repositories</h1>
  
  <table>
    <tr>
      <th>Name</th>
      <th>User</th>
      <th>Tag List</th>
      <th></th>
      <th></th>
      <th></th>
    </tr>
  
  <% @repositories.each do |repository| %>
    <tr>
      <td><%= repository.name %></td>
      <td><%= repository.user %></td>
      <td><%= repository.tag_list %></td>
      <td><%= link_to 'Show', repository %></td>
      <td><%= link_to 'Edit', edit_repository_path(repository) %></td>
      <td><%= link_to 'Destroy', repository, :confirm => 'Are you sure?', :method => :delete %></td>
    </tr>
  <% end %>
  </table>
  
  <br />
  
  <%= link_to 'New Repository', new_repository_path %>
