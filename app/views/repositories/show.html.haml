      $('#infos').accordion();
    });

%p#notice
  = notice
#repository
  %h1.title
    = link_to @repository.user, @repository.owner_url
    \/
    = link_to @repository.name, @repository.url
  .data
    %strong
      tags: 
    = @repository.tag_list

    #infos

      %h3
        %a{href: '#'}
          What is #{@repository.name}?
      %div
        Repo data here.
